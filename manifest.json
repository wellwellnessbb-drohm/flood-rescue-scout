{
  "manifest_version": 3,
  "name": "Flood Rescue Scout",
  "version": "1.0.0",
  "description": "AI-powered tool to extract flood rescue data from social media posts.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "identity"
  ],
  "host_permissions": [
    "https://sheets.googleapis.com/*",
    "https://www.googleapis.com/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Analyze Post"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}